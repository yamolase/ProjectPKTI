<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pesanan"
    android:background="#000000">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Notif_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/hijau"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/Notif_Toolbar"
        android:textSize="34dp"
        android:text="Pesanan"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/archivonarrowregular"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tlbar3"
        android:layout_marginTop="120dp"
        android:id="@+id/kolom">

        <TextView
            android:id="@+id/btnLgn"
            android:layout_width="408dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/bg_gradasi9"
            android:shadowColor="#988A8A"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <TextView
            android:id="@+id/gmbr1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3mm"
            android:layout_marginTop="2mm"
            android:drawableBottom="@drawable/lokasi"
            android:text="Pagar Besi"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/pelanggan1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gmbr1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="198dp"
            android:layout_marginTop="-70dp"
            android:fontFamily="@font/tahoma"
            android:gravity="right"
            android:text="Rp.2.800.000,00-"
            android:textColor="#CFCFE1"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pelanggan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelanggan1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/arial"
            android:text="Jl.Maju Terus No.31"
            android:textColor="#CFCFE1"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Detail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gmbr1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="198dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/tahoma"
            android:gravity="right"
            android:text="Detail"
            android:textColor="#CFCFE1"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/kolom"
        android:layout_marginTop="-3dp">

        <TextView
            android:id="@+id/isidlm"
            android:layout_width="408dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/bg_gradasi9"
            android:shadowColor="#988A8A"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

    </RelativeLayout>


</RelativeLayout>