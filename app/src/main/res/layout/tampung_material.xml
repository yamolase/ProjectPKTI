                    android:src="@drawable/besi_plat" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wdahjaya5"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_below="@id/wdahjaya4"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/wdahjdl4"
                    android:layout_width="wrap_content"
                    android:layout_height="28mm"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="174dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/bg_gradasi5"
                    android:fontFamily="@font/tahoma"
                    android:shadowColor="#988A8A"
                    android:text="Besi Hollow"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    app:backgroundTint="#FFFFFF"
                    app:backgroundTintMode="multiply"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/info_material4"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wdahjdl4"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="184dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/arial"
                    android:text="@string/besi_hollow"
