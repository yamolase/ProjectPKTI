                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/info_material2"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wdahjdl2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="184dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/arial"
                    android:text="@string/Besi_Beton"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_material2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-17dp"
                    android:layout_marginEnd="-69dp"
                    android:fontFamily="@font/arial"
                    android:text="Selengkapnya"
                    android:textColor="#4E79DE"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="163dp"
                    android:layout_height="185dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/gbr2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wdahjaya4"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:layout_below="@id/wdahjaya3"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/wdahjdl3"
                    android:layout_width="wrap_content"
                    android:layout_height="28mm"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="174dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/bg_gradasi5"
                    android:fontFamily="@font/tahoma"
                    android:shadowColor="#988A8A"
                    android:text="Besi Plat"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    app:backgroundTint="#FFFFFF"
                    app:backgroundTintMode="multiply"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/info_material3"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wdahjdl3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="184dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/arial"
                    android:text="@string/besi_plat"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_material3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="35dp"
