                    android:src="@drawable/gbr4" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wdahjaya6"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_below="@id/wdahjaya5"
                android:layout_marginTop="20dp">
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="720dp"
        android:background="@color/purple_200">

        <TextView
            android:id="@+id/txthome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm"
            android:drawableTop="@drawable/home2"
            android:fontFamily="@font/arial"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            android:onClick="onHomes3"/>
        <TextView
            android:id="@+id/txtmaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:drawableTop="@drawable/material2"
            android:fontFamily="@font/arial"
            android:text="Material"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/txtbengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9mm"
            android:drawableTop="@drawable/bengkel"
            android:fontFamily="@font/arial"
            android:text="Bengkel"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            android:onClick="onBengkelUser"/>

        <TextView
            android:id="@+id/txthistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9mm"
            android:drawableTop="@drawable/history"
            android:fontFamily="@font/arial"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            android:onClick="onHins4"/>
    </LinearLayout>
</RelativeLayout>
