<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".riwayatpemesanan"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/RiwayatPemesanan2_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kuning"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riwayat Pemesanan"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/arial"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
    <Button
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="SELESAI"
        android:textSize="22dp"
        android:id="@+id/btn_selesai"
        android:background="@drawable/btn_selesai"
        android:onClick="onSelesaiRiwayat"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-43dp"
        android:text="PROSES"
        android:textSize="22dp"
        android:id="@+id/btn_proses"
        android:background="@drawable/btn_proses" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pintu"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp.3.000.000"
        android:textSize="24dp"
        android:layout_marginLeft="254dp"
        android:layout_marginTop="-30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jaya Mandiri [Bengkel Las/Kontruksi]"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24/12/2020"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="-13dp"
        android:text="15:30" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="7dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="55dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="55dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="55dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="55dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="55dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="55dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/garis"
        android:layout_marginTop="55dp"/>




</LinearLayout>