<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:bottom="1dp" android:left="2dp" android:height="3dp">
                <shape android:layout_width="match_parent">
                    <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/white" />
                    <stroke android:width="1dp" android:color="#707070" />
                    <corners android:radius="1dp" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
